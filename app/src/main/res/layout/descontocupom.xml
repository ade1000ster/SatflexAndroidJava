<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="430dp"
    android:layout_height="match_parent"
    android:background="@drawable/bordaestilos">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:text="Aplicando desconto..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvTotalItens"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        android:text="000"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescPerc"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/tvTotalItens"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalItens" />

    <TextView
        android:id="@+id/tvDescVal"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/tvDescPerc"
        app:layout_constraintTop_toBottomOf="@+id/tvDescPerc" />

    <TextView
        android:id="@+id/tvTotFinal"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/tvDescVal"
        app:layout_constraintTop_toBottomOf="@+id/tvDescVal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="24dp"
        android:text="Total dos itens"
        app:layout_constraintEnd_toStartOf="@+id/tvTotalItens"
        app:layout_constraintTop_toTopOf="@+id/tvTotalItens" />

    <TextView
        android:id="@+id/tvdescpercent"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="24dp"
        android:text="Desconto em percentual"
        app:layout_constraintEnd_toStartOf="@+id/tvDescPerc"
        app:layout_constraintTop_toTopOf="@+id/tvDescPerc" />

    <TextView
        android:id="@+id/tvdescvalorr"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="24dp"
        android:text="Desconto em Valor"
        app:layout_constraintEnd_toStartOf="@+id/tvDescVal"
        app:layout_constraintTop_toTopOf="@+id/tvDescVal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="24dp"
        android:text="Total final"
        app:layout_constraintEnd_toStartOf="@+id/tvTotFinal"
        app:layout_constraintTop_toTopOf="@+id/tvTotFinal" />

    <Button
        android:id="@+id/btConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#8BC34A"
        android:onClick="selecConfirmar"
        android:text="Confirmar"
        app:layout_constraintEnd_toEndOf="@+id/tvTotFinal"
        app:layout_constraintTop_toBottomOf="@+id/tvTotFinal" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#D13A2F"
        android:onClick="voltar"
        android:text="Voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btConfirmar" />
</android.support.constraint.ConstraintLayout>