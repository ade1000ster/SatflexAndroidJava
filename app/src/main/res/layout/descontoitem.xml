<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="520dp"
    android:layout_height="500dp"
    android:background="@drawable/bordaestilos"
    android:clickable="true"
    android:focusable="auto"
    android:keepScreenOn="false">

    <TextView
        android:id="@+id/tvdescricao"
        android:layout_width="123dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Café"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Quantidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvdescricao" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginStart="50dp"
        android:text="Preço unitário"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginStart="50dp"
        android:text="Valor do item"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/tvquantidade"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/tvprecounitario"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/tvvaloritem"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView67"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:text="Desconto unitário"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvquantidade" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="132dp"
        android:layout_height="22dp"
        android:layout_marginStart="50dp"
        android:text="Desconto percentual"
        app:layout_constraintStart_toEndOf="@+id/textView67"
        app:layout_constraintTop_toTopOf="@+id/textView67" />

    <TextView
        android:id="@+id/textView77"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginStart="45dp"
        android:text="Total de desconto"
        app:layout_constraintStart_toEndOf="@+id/textView69"
        app:layout_constraintTop_toTopOf="@+id/textView69" />

    <TextView
        android:id="@+id/tvdescontounitario"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView67"
        app:layout_constraintTop_toBottomOf="@+id/textView67" />

    <TextView
        android:id="@+id/tvdescontopercentual"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView69"
        app:layout_constraintTop_toBottomOf="@+id/textView69" />

    <TextView
        android:id="@+id/tvtotaldesconto"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView77"
        app:layout_constraintTop_toBottomOf="@+id/textView77" />

    <TextView
        android:id="@+id/textView81"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:text="Acréscimo unitário"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvdescontounitario" />

    <TextView
        android:id="@+id/textView82"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginStart="50dp"
        android:text="Acrésc percentual"
        app:layout_constraintStart_toEndOf="@+id/textView81"
        app:layout_constraintTop_toTopOf="@+id/textView81" />

    <TextView
        android:id="@+id/textView83"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginStart="50dp"
        android:text="Total de acréscimo"
        app:layout_constraintStart_toEndOf="@+id/textView82"
        app:layout_constraintTop_toTopOf="@+id/textView82" />

    <TextView
        android:id="@+id/tvacresunitario"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView81"
        app:layout_constraintTop_toBottomOf="@+id/textView81" />

    <TextView
        android:id="@+id/tvacrescpercent"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView82"
        app:layout_constraintTop_toBottomOf="@+id/textView82" />

    <TextView
        android:id="@+id/tvtotalacrescimo"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView83"
        app:layout_constraintTop_toBottomOf="@+id/textView83" />

    <TextView
        android:id="@+id/textView87"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:text="Total final"
        app:layout_constraintStart_toStartOf="@+id/tvtotalacrescimo"
        app:layout_constraintTop_toBottomOf="@+id/tvtotalacrescimo" />

    <TextView
        android:id="@+id/tvtotalfinal"
        android:layout_width="116dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordaestilos"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView87"
        app:layout_constraintTop_toBottomOf="@+id/textView87" />

    <Button
        android:id="@+id/button11"
        android:layout_width="82dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:onClick="voltar"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnconfirmar"
        android:layout_width="117dp"
        android:layout_height="44dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:onClick="confirmar"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button11"
        app:layout_constraintTop_toTopOf="@+id/button11" />

</android.support.constraint.ConstraintLayout>