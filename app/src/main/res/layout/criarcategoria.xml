<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bordasarredondadoscateg"
    android:onClick="esconderTeclado"
    android:visibility="visible">


    <EditText
        android:id="@+id/txtviewcorcateg"
        android:layout_width="29dp"
        android:layout_height="28dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/bordasarredondados"
        android:onClick="novacor"
        android:text="#FF8C00"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textViewDescrCateg"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="188dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/selecionado"
        android:onClick="gravarcategoria"
        android:text="Gravar categoria"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toEndOf="@+id/Bcancelcateg"
        app:layout_constraintTop_toTopOf="@+id/Bcancelcateg"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Bcancelcateg"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="480dp"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="cancelarcategoria"
        android:text="Cancelar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCest" />

    <TextView
        android:id="@+id/textViewcriarcateg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Criando nova categoria"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="Descrição"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewcriarcateg" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="132dp"
        android:layout_height="24dp"
        android:text="Cor representativa"
        app:layout_constraintStart_toStartOf="@+id/alterarcor"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <EditText
        android:id="@+id/textViewDescrCateg"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:gravity="center"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/alterarcor"
        android:layout_width="117dp"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:background="@color/selecionado"
        android:onClick="novacor"
        android:text="Selecione a Cor"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/textViewDescrCateg"
        app:layout_constraintTop_toTopOf="@+id/textViewDescrCateg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Criado em:"
        app:layout_constraintStart_toStartOf="@+id/tvCriadoem"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <EditText
        android:id="@+id/tvCriadoem"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        android:text="criado em"
        app:layout_constraintStart_toEndOf="@+id/alterarcor"
        app:layout_constraintTop_toTopOf="@+id/textViewDescrCateg" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Ncm da Categoria"
        app:layout_constraintStart_toStartOf="@+id/textViewDescrCateg"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescrCateg" />

    <EditText
        android:id="@+id/tvNcm"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:gravity="center"
        android:onClick="tecladoNcm"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Origem"
        app:layout_constraintStart_toStartOf="@+id/tvNcm"
        app:layout_constraintTop_toBottomOf="@+id/tvNcm" />

    <Spinner
        android:id="@+id/spOrigem"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        android:text="origem"
        app:layout_constraintStart_toStartOf="@+id/textView45"
        app:layout_constraintTop_toBottomOf="@+id/textView45" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="20dp"
        android:text="CFOP"
        app:layout_constraintStart_toEndOf="@+id/spOrigem"
        app:layout_constraintTop_toBottomOf="@+id/tvNcm" />

    <EditText
        android:id="@+id/tvCfop"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        android:onClick="tecladoCFOP"
        app:layout_constraintStart_toStartOf="@+id/textView51"
        app:layout_constraintTop_toBottomOf="@+id/textView51" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="20dp"
        android:text="CSOSN"
        app:layout_constraintStart_toEndOf="@+id/tvCfop"
        app:layout_constraintTop_toBottomOf="@+id/tvNcm" />

    <Spinner
        android:id="@+id/spCsosn"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="239dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="@+id/textView54"
        app:layout_constraintTop_toBottomOf="@+id/textView54" />

    <TextView
        android:id="@+id/textView59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Alíquota ICMS"
        app:layout_constraintStart_toStartOf="@+id/spOrigem"
        app:layout_constraintTop_toBottomOf="@+id/spOrigem" />

    <EditText
        android:id="@+id/tvAliqicms"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        android:onClick="tecladoICMS"
        app:layout_constraintStart_toStartOf="@+id/textView59"
        app:layout_constraintTop_toBottomOf="@+id/textView59" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:text="CST do Pis"
        app:layout_constraintStart_toEndOf="@+id/tvAliqicms"
        app:layout_constraintTop_toTopOf="@+id/textView59" />

    <EditText
        android:id="@+id/tvCstpis"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        android:onClick="tecladoCstPis"
        app:layout_constraintStart_toStartOf="@+id/textView62"
        app:layout_constraintTop_toBottomOf="@+id/textView62" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:text="Alíquota do Pis"
        app:layout_constraintStart_toEndOf="@+id/tvCstpis"
        app:layout_constraintTop_toTopOf="@+id/textView59" />

    <EditText
        android:id="@+id/tvAliqpis"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        android:onClick="tecladoAliqPis"
        app:layout_constraintStart_toStartOf="@+id/textView64"
        app:layout_constraintTop_toBottomOf="@+id/textView64" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:text="CST do Cofins"
        app:layout_constraintStart_toEndOf="@+id/tvAliqpis"
        app:layout_constraintTop_toTopOf="@+id/textView59" />

    <EditText
        android:id="@+id/tvCstcofins"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        android:onClick="tecladoCstCofins"
        app:layout_constraintStart_toStartOf="@+id/textView66"
        app:layout_constraintTop_toBottomOf="@+id/textView66" />

    <TextView
        android:id="@+id/textView68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Alíquota de Cofins"
        app:layout_constraintStart_toStartOf="@+id/textView59"
        app:layout_constraintTop_toBottomOf="@+id/tvAliqicms" />

    <EditText
        android:id="@+id/tvAliqcofins"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        android:onClick="tecladoAliqCofins"
        app:layout_constraintStart_toStartOf="@+id/textView68"
        app:layout_constraintTop_toBottomOf="@+id/textView68" />

    <TextView
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:text="Contribuição Social"
        app:layout_constraintStart_toEndOf="@+id/tvAliqcofins"
        app:layout_constraintTop_toTopOf="@+id/textView68" />

    <EditText
        android:id="@+id/tvContribsocial"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        android:onClick="tecladoContribSocial"
        app:layout_constraintStart_toStartOf="@+id/textView70"
        app:layout_constraintTop_toBottomOf="@+id/textView70" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:text="CEST"
        app:layout_constraintStart_toEndOf="@+id/tvContribsocial"
        app:layout_constraintTop_toTopOf="@+id/textView68" />

    <EditText
        android:id="@+id/tvCest"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordasarredondadoscateg"
        android:focusable="false"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/textView72"
        app:layout_constraintTop_toBottomOf="@+id/textView72" />

    <CheckBox
        android:id="@+id/cbTribut"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:layout_width="305dp"
        android:layout_height="32dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:buttonTint="#000"
        android:checked="false"
        android:text="Usar as mesmas tributações do NCM"
        app:layout_constraintStart_toEndOf="@+id/tvNcm"
        app:layout_constraintTop_toTopOf="@+id/tvNcm" />

</android.support.constraint.ConstraintLayout>